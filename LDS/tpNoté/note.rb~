!/bin/env ruby
 encoding: utf-8
class Array 
    def stammer
        length_tab = self.length
        index = 0
        tabRes = []
        for i in 0..(length_tab-1) do 
            for j in 0..index do 
                tabRes.push(self.at(i))
            end
            index+=1
        end
        tabRes
    end
end
p [20,2,2015].stammer

